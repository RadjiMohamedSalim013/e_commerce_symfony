{% extends 'base.html.twig' %}

{% block title %}Accueil - Ma Boutique{% endblock %}

{% block body %}
<div class="container mt-4">

    {% include 'partials/banner.html.twig' with {'categories': categories} %}

 

    <!-- Section pour afficher les résultats de recherche -->
    <div id="search-results-container" class="row g-4" style="display: none;">
        <div class="col-12">
            <h2 class="text-center mb-4" style="color: var(--primary-dark);">
                Résultats de recherche
            </h2>
            <div id="search-results-content" class="row g-4">
                <!-- Les résultats seront injectés ici -->
            </div>
        </div>
    </div>

    <!-- Produits phares (affichés par défaut) -->
    <div id="featured-products">
        {% include 'partials/products.html.twig' with {'products': products} %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('search.js') }}"></script>
{% endblock %}
