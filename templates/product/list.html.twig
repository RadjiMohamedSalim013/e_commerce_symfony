{% extends 'base.html.twig' %}

{% block title %}Nos Produits{% endblock %}

{% block body %}
<h1>Nos Produits</h1>

<div class="product-list">
    {% for product in products %}
        <div class="product-card">
            <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" style="max-width:200px;">
            <h2>{{ product.name }}</h2>
            <p>{{ product.description|slice(0, 100) ~ '...' }}</p>
            <p>Prix : {{ product.price }} â‚¬</p>
            <a href="{{ path('product_detail', {id: product.id}) }}">Voir le produit</a>
        </div>
    {% else %}
        <p>Aucun produit disponible.</p>
    {% endfor %}
</div>
{% endblock %}
