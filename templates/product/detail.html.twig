{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Ma Boutique{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8 max-w-6xl">
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-6">
      <!-- Colonne Image -->
      <div class="flex items-center justify-center bg-[#F3DE2C]/10 p-6 rounded-lg">
        {% if product.image %}
        <img src="{{ asset('uploads/products/' ~ product.image) }}" 
             alt="{{ product.name }}" 
             class="max-h-96 w-auto object-contain">
        {% else %}
        <div class="text-center text-[#5C8001]">
          <svg class="w-32 h-32 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <p class="mt-4 font-medium">Image non disponible</p>
        </div>
        {% endif %}
      </div>
      
      <!-- Colonne Détails -->
      <div class="flex flex-col">
        <h1 class="text-3xl font-bold text-[#5C8001] mb-4 pb-2 border-b-2 border-[#FB6107]/50">
          {{ product.name }}
        </h1>
        
        <div class="text-2xl font-bold text-[#FB6107] my-4">
          {{ product.price|number_format(0, ',', ' ') }} FCFA
        </div>
        
        <div class="prose max-w-none text-gray-700 mb-6">
          {{ product.description|nl2br }}
        </div>
        
        <div class="flex items-center mb-6">
          <span class="px-3 py-1 rounded-full text-sm font-medium 
                      {% if product.stock > 10 %}bg-[#7CB518]/20 text-[#5C8001]
                      {% elseif product.stock > 0 %}bg-[#FBB02D]/20 text-[#FB6107]
                      {% else %}bg-gray-200 text-gray-600{% endif %}">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="{% if product.stock > 0 %}M5 13l4 4L19 7{% else %}M6 18L18 6M6 6l12 12{% endif %}"/>
            </svg>
            {% if product.stock > 10 %}
              En stock ({{ product.stock }} disponibles)
            {% elseif product.stock > 0 %}
              Derniers articles ({{ product.stock }})
            {% else %}
              Rupture de stock
            {% endif %}
          </span>
        </div>
        
        <form method="post" action="{{ path('cart_add', {id: product.id}) }}" class="mt-auto">
          <div class="flex items-center mb-6">
            <label for="quantity" class="mr-3 font-medium text-gray-700">Quantité :</label>
            <input type="number" id="quantity" name="quantity" 
                   value="1" min="1" max="{{ product.stock }}"
                   class="w-20 px-3 py-2 border border-gray-300 rounded-md text-center focus:ring-2 focus:ring-[#5C8001] focus:border-[#5C8001]"
                   {% if product.stock <= 0 %}disabled{% endif %}>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button type="submit" 
                    class="flex-1 min-w-[200px] px-6 py-3 bg-[#5C8001] hover:bg-[#7CB518] text-white font-medium rounded-md shadow-sm transition-colors flex items-center justify-center disabled:opacity-50"
                    {% if product.stock <= 0 %}disabled{% endif %}>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Ajouter au panier
            </button>
            
            <a href="{{ path('product_list') }}" 
               class="flex-1 min-w-[200px] px-6 py-3 border border-[#5C8001] text-[#5C8001] font-medium rounded-md shadow-sm hover:bg-[#F3DE2C]/20 transition-colors flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Retour à la liste
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
