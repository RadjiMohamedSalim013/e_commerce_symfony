{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<h1>Liste des catégories</h1>
<a href="{{ path('admin_category_new') }}">Ajouter une catégorie</a>
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Slug</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    {% if category.image %}
                        <img src="{{ asset('uploads/categories/' ~ category.image) }}" alt="{{ category.name }}" width="80">
                    {% else %}
                        Pas d'image
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('admin_category_edit', {id: category.id}) }}">Modifier</a>
                    <a href="{{ path('admin_category_delete', {id: category.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer ?');">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
