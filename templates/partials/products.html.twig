<style>
  .product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
    overflow: hidden;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }
  
  .product-img {
    height: 220px;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .product-card:hover .product-img {
    transform: scale(1.05);
  }
  
  .price-tag {
    color: var(--primary-dark);
    font-weight: bold;
    font-size: 1.1rem;
  }
</style>

<h2 class="text-center mb-5" style="color: var(--primary-dark); border-bottom: 2px solid var(--primary-light); display: inline-block; padding-bottom: 5px;">
  Nos Produits Phares
</h2>

<div class="row g-4">
  {% for product in products %}
  <div class="col-lg-3 col-md-4 col-6">
    <div class="card product-card h-100 shadow-sm">
      {% if product.image %}
      <img src="{{ asset('uploads/products/' ~ product.image) }}" 
           alt="{{ product.name }}" class="card-img-top product-img">
      {% else %}
      <img src="{{ asset('images/no-product.png') }}" 
           alt="Image par défaut" class="card-img-top product-img">
      {% endif %}
      
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">{{ product.name }}</h5>
        <div class="mt-auto">
          <p class="price-tag mb-2">{{ product.price|number_format(0, ',', ' ') }} FCFA</p>
          
          <div class="d-flex justify-content-between">
            <a href="{{ path('product_show', {id: product.id}) }}" 
               class="btn btn-sm btn-outline-dark">
              <i class="fas fa-eye me-1"></i> Détails
            </a>
            
            <form method="post" action="{{ path('cart_add', {id: product.id}) }}">
              <button type="submit" class="btn btn-sm btn-primary">
                <i class="fas fa-cart-plus me-1"></i> Ajouter
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% else %}
  <div class="col-12">
    <div class="alert alert-info text-center">
      Aucun produit disponible pour le moment
    </div>
  </div>
  {% endfor %}
</div>