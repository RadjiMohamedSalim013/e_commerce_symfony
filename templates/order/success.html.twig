{% extends 'base.html.twig' %}

{% block title %}Commande réussie{% endblock %}

{% block body %}
<h1>Commande réussie !</h1>

<p>Merci {{ app.user.firstname }} pour votre commande.</p>

<h2>Détails de votre commande :</h2>

<table class="table">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {% set total = 0 %}
        {% for item in order.orderItems %}
            {% set total = total + (item.price * item.quantity) %}
            <tr>
                <td>{{ item.product.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.price }} €</td>
                <td>{{ (item.price * item.quantity)|number_format(2) }} €</td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total général</th>
            <th>{{ total|number_format(2) }} €</th>
        </tr>
    </tfoot>
</table>

<a href="{{ path('product_list') }}" class="btn btn-primary">Continuer vos achats</a>

{% endblock %}
